# ============================================
# Production Environment Variables Template
# ============================================
# Copy this file and set actual production values
# DO NOT commit the actual .env file to version control

# Server Configuration
PORT=8080

# Database Configuration
DATABASE_URL=jdbc:postgresql://your-db-host:5432/booksiread_db
DATABASE_USERNAME=your_db_user
DATABASE_PASSWORD=your_strong_db_password

# Hibernate Configuration
# CRITICAL: Use 'validate' or 'none' in production
HIBERNATE_DDL_AUTO=validate
SHOW_SQL=false

# Logging Configuration
LOG_LEVEL=INFO
APP_LOG_LEVEL=INFO
SPRING_LOG_LEVEL=WARN
SQL_LOG_LEVEL=WARN

# JWT Configuration
# Generate strong secret: openssl rand -base64 64
JWT_SECRET=your_very_strong_jwt_secret_at_least_256_bits_long_change_this
JWT_EXPIRATION=86400000

# CORS Configuration
# Add your frontend URL(s) - comma-separated for multiple
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# Frontend URL Configuration
FRONTEND_URL=https://yourdomain.com

# Brevo Email API Configuration
# Get your API key from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your_brevo_api_key_here
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Books I Read

# Gemini AI Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/models/gemma-3-4b-it:generateContent